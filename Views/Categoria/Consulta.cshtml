@model GestionZapateria.Models.Categoria

@{
    var listCategoria = (List<Categoria>)ViewData["ListCategoria"];
    ViewData["Title"] = "Index";
}

<h1>Consulta</h1>

<h4>Categorias</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("Index", "Categoria", FormMethod.Get))
        {

            @foreach (var list in listCategoria)
            {

                <table class="table table-striped table-dark">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Nombre</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th scope="row">@list.Id_Categoria</th>
                            <td>@list.Nombre_Categoria</td>
                            <td><input type="submit" name="id_Categoria" value="@list.Id_Categoria" class="btn btn-warning buscar" /></td>
                        </tr>
                    </tbody>
                </table>

            }

        }
    </div>
</div>