@model GestionZapateria.Models.Marca

@{
    var listMarca = (List<Marca>)ViewData["ListMarca"];
    ViewData["Title"] = "Index";
}

<h1>Consulta</h1>

<h4>Marcas</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("Index", "Marca", FormMethod.Get))
        {

            @foreach (var list in listMarca)
            {

                <table class="table table-striped table-dark">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Nombre</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th scope="row">@list.Id_Marca</th>
                            <td>@list.Nombre_Marca</td>
                            <td><input type="submit" name="id_Marca" value="@list.Id_Marca" class="btn btn-warning buscar" /></td>
                        </tr>
                    </tbody>
                </table>

            }

        }
    </div>
</div>