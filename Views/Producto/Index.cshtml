@model GestionZapateria.Models.Producto

@{
    ViewData["Title"] = "GestionProducto";
}

<h1>Gestion de Productos</h1>
<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        @using (Html.BeginForm("Index", "Producto", FormMethod.Post))
        {


            <div class="form-group" style="padding:10px">
                <label asp-for="Id_Producto" class="control-label"></label>
                <input asp-for="Id_Producto" class="form-control" />

            </div>

            <div class="form-group" style="padding:10px">
                <label asp-for="Id_Categoria" class="control-label"></label>
                <input asp-for="Id_Categoria" class="form-control" />

            </div>

            <div class="form-group" style="padding:10px">
                <label asp-for="Id_Marca" class="control-label"></label>
                <input asp-for="Id_Marca" class="form-control" />

            </div>

            <div class="form-group" style="padding:10px">
                <label asp-for="Modelo" class="control-label"></label>
                <input asp-for="Modelo" class="form-control" />
            </div>
            <div class="form-group" style="padding:10px">
                <label asp-for="Talla" class="control-label"></label>
                <input asp-for="Talla" class="form-control" />

            </div>
            <div class="form-group" style="padding:10px">
                <label asp-for="Precio" class="control-label"></label>
                <input asp-for="Precio" class="form-control" />

            </div>

            <div class="d-flex justify-content-evenly mt-10" style="margin-top:10px">

                <div class="form-group">
                    <input type="submit" name="accion" value="Buscar" class="btn btn-warning buscar" />
                </div>

                <div class="form-group">
                    <input type="submit" name="accion" value="Actualizar" class="btn btn-primary actualizar" />
                </div>

                <div class="form-group">
                    <input type="submit" name="accion" value="Eliminar" class="btn btn-danger eliminar" />
                </div>

                <div class="form-group">
                    <input type="submit" name="accion" value="Insertar" class="btn btn-success insertar" />
                </div>

            </div>

        }
    </div>
</div>


